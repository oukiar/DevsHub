
<Login@AnchorLayout>:
    anchor_x: "center"
    anchor_y: "center"
    txt_email:txt_email
    txt_password:txt_password
    BoxLayout:
        size_hint: (None, None)
        size: (400,300)
        orientation: "vertical"
        spacing: 20
        Label:
            text: "Email"
            size_hint_y: None
            height: 30
        TextInput:
            id: txt_email
            multiline: False
            write_tab: False
            on_text_validate: root.txt_password.focus=True
            text: "devsinc@hotmail.com"
        Label:
            text: "Contrase√±a"
            size_hint_y: None
            height: 30
            
        TextInput:
            id: txt_password
            password: True
            multiline: False
            write_tab: False
            on_text_validate: app.root.do_login(root)
            text: "seisdevs_2010"
            
        Button:
            text: "Login"
            on_press: app.root.do_login(root)
           
