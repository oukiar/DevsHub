<TextBoxNote@TextInput>:
    background_normal: ""
    multiline: False
    write_tab: False
    
    canvas.after:          
        Color:
            rgba: 0, 0, 0, 1
        Line:
            points: [self.pos[0]+self.width-10, self.pos[1]+2, self.pos[0]+self.width, self.pos[1]+2]
            width: 1
        Line:
            points: [self.pos[0]+self.width, self.pos[1], self.pos[0]+self.width, self.pos[1]+10]
            width: 1

